    "definitions": {
        "models.Credentials": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "emirkovacevic@protonmail.com"
                },
                "password": {
                    "type": "string",
                    "example": "408660As!"
                }
            }
        },
        "models.NewUser": {
            "type": "object",
            "required": [
                "email",
                "first_name",
                "last_name",
                "location",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "johndoe@mail.com"
                },
                "first_name": {
                    "type": "string",
                    "example": "John"
                },
                "last_name": {
                    "type": "string",
                    "example": "Doe"
                },
                "location": {
                    "type": "string",
                    "example": "New York"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "responses.AuthResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object",
                    "additionalProperties": true
                },
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "integer"
                }
            }
        },
        "responses.UserResponse": {
            "type": "object",
